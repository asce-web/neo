h1#speakers Speakers
include ../../../../_views/_Person.view.pug
+speakerList(site.currentConference().getSpeakersAll().filter(function ($person) { return $person.isStarred() }))
-
  let highlight_buttons = Element.data([
    new Element('a').attr('href','speakers.html').addContent(`All Speakers`)
  ], {
    attributes: {
      list : { class: 'o-List o-Flex o-ListAction' },
      value: { class: 'o-List__Item o-Flex__Item o-ListAction__Item' },
    },
    options: {attributes:{list:{ class:'c-Button c-Button--hilite' }}},
  })
!= highlight_buttons
