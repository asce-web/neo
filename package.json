{
  "name": "neo",
  "version": "0.2.0",
  "description": "Neo theme and style guide for conference sites.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "pug:root": "pug index.jade",
    "pug:docs": "pug -O docs/_models/options.js docs/{index,principles,base,obj,comp,temp,help,atom}.jade",
    "pug:all": "npm run pug:root  &&  npm run pug:docs",
    "lessc:neo": "lessc neo.less neo.css",
    "lessc:docs": "lessc docs/styles/docs.less docs/styles/docs.css",
    "lessc:all": "npm run lessc:neo  &&  npm run lessc:docs",
    "minify": "cleancss neo.css -o neo.min.css",
    "browserify:principles": "browserify docs/scripts/principles.js > docs/scripts/principles.b.js",
    "browserify:all": "npm run browserify:principles",
    "build": "npm run pug:all  &&  npm run lessc:all  &&  npm run minify  &&  npm run browserify:all",
    "unbuild:root": "rm index.html",
    "unbuild:docs": "rm docs/{index,principles,base,obj,comp,temp,help,atom}.html",
    "unbuild:css": "rm neo.css neo.min.css docs/styles/docs.css",
    "unbuild:js": "rm docs/scripts/principles.b.js",
    "unbuild": "npm run unbuild:root  &&  npm run unbuild:docs  &&  npm run unbuild:css  &&  npm run unbuild:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asce-web/neo.git"
  },
  "keywords": [
    "style guide",
    "pattern library",
    "convention",
    "congress",
    "conference"
  ],
  "author": "ASCE Web Team <webteam@asce.org> (https://github.com/asce-web/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asce-web/neo/issues"
  },
  "homepage": "https://github.com/asce-web/neo#readme",
  "devDependencies": {
    "browserify": "^14.1.0",
    "clean-css": "^4.0.8",
    "less": "^2.7.2",
    "pug-cli": "^1.0.0-alpha6",
    "xmeter": "^5.4.0"
  },
  "dependencies": {
    "csscolor": "^1.3.1",
    "sitepage": "^1.0.0"
  }
}
